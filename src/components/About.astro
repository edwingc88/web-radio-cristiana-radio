<style>

.slider {
  position: relative;
  width: 100%;
  margin: auto;
  perspective: 1000px;
  overflow: hidden;
}

.card-image {
  object-fit: cover;
  border-radius: 1em;
  padding-block: 1em;
  padding-inline: 0.5em;
  aspect-ratio: 1/1;   
  margin: 0 auto;
}

.card-item {
  width: 80%
}

.card-wrapper {
  overflow: visible !important; /* 游녣 Permite que el slide se expanda */
}
.swiper-wrapper {
  overflow: visible !important;
}


.swiper-pagination {
  font-weight: bold;
}

.swiper-button-prev{
  color: #fff;
  font-weight: bold;
  margin-left: 50px;
}

.swiper-button-next{
  color: #fff;
  font-weight: bold;
  margin-right: 50px;
}

.swiper-slide-active {
 /* 游녣 Aumenta tama침o */
  z-index:1000!important;                 /* 游녣 Lo pone encima */
}

.card-wrapper .swiper-slide-active img {
  transform: scale(1.6);
  opacity: 1;
  z-index: 100!important;
}

.swiper-slide {
  transform: scale(0.96);
  z-index: -10;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.swiper-slide::after {
  transform: scale(0.96);
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.65);
}

.card-wrapper .swiper-slide-active::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.1);
}


</style>

<script type="module">
  import Swiper from 'https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.mjs'

const swiper =  new Swiper('.card-wrapper', {
    slidesPerView: 1,
    centeredSlides: true,   
    initialSlide: 0,
    loop: true,
    spaceBetween: 0,
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
    },
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },

    breakpoints: {
      0: {
        slidesPerView: 1,
      },
      768: {
        slidesPerView: 3,
      }
    }
  });
</script>